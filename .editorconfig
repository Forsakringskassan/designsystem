# EditorConfig documentation: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf

[*.{html,ts,js,scss,json,vue}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[package{,-lock}.json]
indent_size = 2

[Jenkinsfile]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
